<div class='item-name'>
  <p><%= @item.name %></p>
  <% if @item.category%>
    <div class='category'><%= @item.category.name %></div>
  <% end %>
</div>

<div class='item-info'>
  <div class='photo'><%= image_tag @item.image.url(:medium) %></div>
  <div class='info'>
    <div class="description"><%= @item.description %></div>
    <div class="price">Цена: <%= @item.price %> руб.</div>
    <div class="buy"><%= link_to 'в корзину', item_users_path(item_id: @item.id), method: :post, class: 'btn btn-large btn-success' %></div>
  </div>
</div>


<div class="comments">
  <h3>Обсуждение</h3>
  <%= render 'comments/form' %>

  <% @item.comments.each do |comment| %>
  <div class="comment-element">
    <div class="date"><%= comment.created_at.strftime('%d.%m.%Y') %></div>
    <div class="delete"><%= link_to 'удалить', comment, method: :delete, confirm: 'are u sure?' %> </div>
    <div class="message"><%= comment.message %></div>
  </div>
<% end %>
</div>