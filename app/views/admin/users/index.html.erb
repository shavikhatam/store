<h1>пользователи</h1>


<table class='table'>
  <tr>
    <th>ID</th>
    <th>email</th>
    <th>last name</th>
    <th>first name</th>
    <th>reg date</th>
    <th>number of orders</th>
  </tr>
  <% @users.each do |user| %>
   <tr>
     <td><%= user.id %></td>
     <td><%= user.email %></td>
     <td><%= user.last_name %></td>
     <td><%= user.first_name %></td>
     <td><%= user.created_at.strftime('%d.%m.%Y') %></td>
     <td><%= user.orders.count %></td>
   </tr>
  <% end %>
</table>