<h1>Our categories</h1>


    <% @categories.each do |category| %>
        <div class='category-element'>

            <div class='category-title'><%= link_to category.name, category %>
            (<%= category.items.count %>)
            </div>

            <div class='category-desc'><%= category.description %></div>
        </div>
    <% end %>
