<h1>Моя корзина</h1>

<% if @item_users.any? %>

    <table class='table'>

      <tr>
        <th>название</th>
        <th>цена</th>
        <th>кол-во</th>
        <th></th>
      </tr>

      <% @item_users.each do |t| %>
        <tr>
          <td><%= t.item.name %></td>
          <td><%= t.item.price %> руб.</td>
          <td><%= t.quantity %></td>
          <td><%= link_to 'удалить', t, method: :delete, confirm: 'are u sure?' %></td>
        </tr>
      <% end %>

    </table>

    <%= link_to 'Оформить заказ', orders_path, method: :post , class: 'btn btn-success btn-large' %>

<% else %>

    <p>пустая корзина. <%= link_to 'добавьте товары', items_path %></p>

<% end %>